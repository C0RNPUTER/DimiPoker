
<!DOCTYPE html>
<html lang="en">
  <%- include("../header"); %>
<body>

  <!-- Start your project here-->  
  <%- include("../menu") %>

  <!-- 로그인 시작 -->

  
<!-- Material form register -->
<div class="card">

    <h5 class="card-header info-color white-text text-center py-4">
        <strong>Log In</strong>
    </h5>

    <!--Card content-->
    <div class="card-body px-lg-5 pt-0">

        <!-- Form -->
        <form class="text-center" style="color: #757575;" action="#!" id="loginForm" required>
            <!-- Id -->
            <div class="md-form">
                <input type="text" id="id" class="form-control" required>
                <label for="id">Id</label>
            </div>

            <!-- Password -->
            <div class="md-form">
                <input type="password" id="passwd" class="form-control" aria-describedby="password" required>
                <label for="password">Password</label>
            </div>

            <!-- Log in button -->
            <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">Log In</button>

        </form>
        <!-- Form -->

    </div>

</div>
<!-- Material form register -->

  <!-- 로그인 끝 -->

  <!-- End your project here-->

  <%- include("../footer") %>

  <script>
      $(function() {
          $("#loginForm").submit((event) => {
              event.preventDefault();
              //등록
              const id = $("#id").val();
              const passwd = $("#passwd").val();

              $.ajax({
                  url:"/api/player/login",
                  type: "POST", //post
                  data: { id, passwd }
              })
              .done(() => {
                  location.href = "/";
              })
              .fail((request, status, error) => {
                  alert(request.responseText);
              });
          });
      });
  </script>

</body>
</html>
